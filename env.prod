# API Configuration
# VITE_API_URL не нужен - используется относительный путь /api через nginx proxy

# Database (SQLite)
DATABASE_PATH=./data/database.db

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
# User ID - бот использует его для получения Chat ID (для личных чатов они совпадают)
# Если не указан, регистрируется автоматически при первом сообщении боту
TELEGRAM_USER_ID=your_user_id_here

# API Configuration
API_PORT=9000
NODE_ENV=development
